<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8300"
    tools:context="com.nishadjamaldeen.enducev01.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="WELCOME"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="44dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/horizline"
        android:layout_marginBottom="40dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vertline"
        android:scaleY="0.4"
        android:scaleX="0.5"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iconschange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="140dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/iconschange"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="changeTreatment"/>

    <ImageView
        android:id="@+id/iconsnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/iconsnew"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:maxHeight="140dp"
        android:layout_alignTop="@+id/iconschange"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:onClick="newTreatment"/>

    <ImageView
        android:id="@+id/getanalytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        app:srcCompat="@drawable/iconsanalytics"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:maxHeight="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="getAnalytics"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff8300"
        android:alpha="0.8"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

</RelativeLayout>
